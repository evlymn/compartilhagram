{
  "rules": {
    "system": {
      "user": {
        "onDeleted": {
          ".read": true,
          ".write": false
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "timeline": {
      "messages": {
        ".indexOn": "uid",
        ".read": "auth != null",
        "$key": {
          ".read": "auth != null",
          ".write": "auth != null && newData.child('uid').val() == auth.uid "
        }
      },
      "messages_by_user": {
        ".indexOn": "uid",
        ".read": "auth != null",
        ".write": "auth != null"
      },
      "comments": {
        "$key": {
          ".indexOn": "uid",
          ".read": "auth != null",
          ".write": "auth != null"
        }
      },
      "favorites": {
        "comments": {
          "$key": {
            ".indexOn": "uid",
            ".read": "auth != null",
            ".write": "auth != null"
          }
        },
        "messages": {
          "$key": {
            ".indexOn": "uid",
            ".read": true,
            ".write":true
          }
        }
      },
      "look-ahead": {
        "comments": {
          "$key": {
            ".indexOn": "commentId",
            ".read": "auth != null",
            ".write": "auth != null"
          }
        },
        "favorites": {
          "timeline": {
            "$key": {
              ".indexOn": "postId",
              ".read": "auth != null",
              ".write": "auth != null"
            }
          },
          "comments": {
            "$key": {
              ".indexOn": "commentId",
              ".read": "auth != null",
              ".write": "auth != null"
            }
          }
        }
      }
    }
  }
}
